{
    "name": "Aleksi Browser Plugin",
    "description": "Fetches and displays analytical information about Finnish words on a webpage",
    "version": "1.0",
    "permissions": [
        "storage",
        "http://*/*",
        "https://*/*",
        "https://*/"
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; img-src 'self'  http://www.google-analytics.com https://ssl.google-analytics.com; object-src 'self'",
    "web_accessible_resources": [
            "jquery-ui-1.12.0/images/*.png"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*","https://*/*"],
            "css": ["jquery-ui-1.12.0/jquery-ui.ext.min.css","css/cssreset-min.css","css/lookup.css"],
            "js": ["js/jquery.js","js/setup.js","js/inject.js","js/jquery-ui.aleksi.min.js","js/aleksi.js","js/content_listener.js"]
        }
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "background": {
        "scripts": ["js/jquery.js","js/background.js"]
    },
    "browser_action": {
        "default_title": "Toggle analysis of Finnish words on this page"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{41286fcb-6a7e-4cbf-84c0-8f197d9edec7}",
            "update_url": "https://www.aleksi.org/plugin/updates.json"
        }
    },
    "manifest_version": 2
}
